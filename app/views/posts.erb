<div class="container">
  <a href='/'>Homepage</a>
  <h1>List of all posts:</h1>
  <table>
    <tr>
      <th>Post Title</th>
      <th>Author Name</th>
      <th>Tags</th>
    </tr>
    <% @all_posts.each do |post| %>
      <tr>
        <td><a href='/posts/<%= post.id %>'><%= post.title %></a></td>
        <td><% if post.user %><%= post.user.full_name %><% end %></td>
        <td><%= erb :_list_tags, :layout => false, locals: {post: post}%></td>
      </tr>
    <% end %>
  </table>
</div>
